@{
    var currentRoute = $"{ViewContext.RouteData.Values["Controller"]}/{ViewContext.RouteData.Values["Action"]}";
}
<div class="logo-container">
    <div class="logo">
        <a href="">身份认证中心</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler">

<div class="nav-scrollable">
    <nav class="nav-item-container">
        <div class="nav-item">
            <a class="nav-link @(currentRoute == "Home/Index" ? "active" : string.Empty) " asp-area="" asp-controller="Home" asp-action="Index">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> 主页
            </a>
        </div>
        <div class="nav-item">
            <a class="nav-link @(currentRoute.IndexOf("Application/", StringComparison.Ordinal) == 0 ? "active" : string.Empty)" asp-area="" asp-controller="Application" asp-action="Index">
                <span class="bi bi-application-fill-nav-menu" aria-hidden="true"></span> 应用程序
            </a>
        </div>
        <div class="nav-item">
            <a class="nav-link @(currentRoute.IndexOf("Scope/", StringComparison.Ordinal) == 0 ? "active" : string.Empty)" asp-area="" asp-controller="Scope" asp-action="Index">
                <span class="bi bi-apple" aria-hidden="true"></span> 范围
            </a>
        </div>
    </nav>
</div>